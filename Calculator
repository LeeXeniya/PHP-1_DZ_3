<!doctype html>
<html lang="ru">

<form method="get" action="">
    Число: <input type="number" name="x1" value="<?php echo $_GET['x1'] ?>">
    <select name="sign">
        <option value="+"> + </option>
        <option value="-"> - </option>
        <option value="*"> * </option>
        <option value="/"> / </option>
    </select>
    Число: <input type="number" name="x2" value="<?php echo $_GET['x2'] ?>">
    <button type="submit">=</button>

<?php
$x1 = $_GET['x1'];
$x2 = $_GET['x2'];
$sign = $_GET['sign'];

If (isset($x1) && trim($x1 !== '') && isset($x2) && trim($x2 !== '')) {
   if ('+'== $sign) {
       echo $x1 + $x2;
   }
   elseif('-' == $sign) {
       echo x1 - $x2;
   }
   elseif('*' == $sign) {
       echo $x1 * $x2;
   }
   elseif('/' == $sign & $x2 != '0') {
       echo $x1 / $x2;
   } else {
       echo 'На ноль делить нельзя!';
   }
}  else {
    echo 'Введены некорректные данные';
}
?>
</form>
</html>
